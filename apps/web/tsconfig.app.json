{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022"
  },
  "include": ["src"],
  "exclude": [
    "src/test",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/pages/__tests__/**/*"
  ]
}
